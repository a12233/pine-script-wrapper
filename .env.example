# OpenRouter - AI API aggregator (https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-xxx
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# Browser Automation
# For local dev: set USE_LOCAL_BROWSER=true to launch your local Chrome (visible, good for debugging)
# For production: use Browserless.io (Vercel can't launch Chrome)
USE_LOCAL_BROWSER=true
CHROME_PATH=                                    # Optional: override Chrome executable path
BROWSERLESS_API_KEY=your_browserless_api_key   # Required when USE_LOCAL_BROWSER=false
BROWSERLESS_ENDPOINT=wss://chrome.browserless.io

# Stripe - Payment processing
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Redis - Session and state storage (optional, uses in-memory if not set)
# For Fly.io: `fly redis create` then use the connection string
# For local: `docker run -p 6379:6379 redis` or leave empty for in-memory
REDIS_URL=redis://localhost:6379

# App configuration
APP_URL=http://localhost:3000
SESSION_SECRET=generate_a_random_32_char_string
TV_CREDENTIAL_ENCRYPTION_KEY=generate_a_random_32_char_string
